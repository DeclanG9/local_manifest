<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Remote -->
	<remote
		name="PainKiller3"
		fetch="https://github.com/PainKiller3"/>

	<remote
		name="DeclanG9"
		fetch="https://github.com/DeclanG9"/>

	<remote 
		name="kdrag0n"
		fetch="https://github.com/kdrag0n"/>

	<remote
		name="xd"
		fetch="https://github.com/xdroid-oss"
		revision="thirteen"/>

     <!-- Trees -->
	<project
		path="device/xiaomi/beryllium"
		name="device_xiaomi_beryllium"
		remote="DeclanG9"
		revision="thirteen"
		clone-depth="1"/>

	<project
		path="device/xiaomi/sdm845-common"
		name="device_xiaomi_sdm845-common"
		remote="DeclanG9"
		revision="thirteen"
		clone-depth="1"/>

	<project
		path="vendor/xiaomi"
		name="vendor_xiaomi"
		remote="PainKiller3"
		revision="thirteen"
		clone-depth="1"/>

	<project
		path="kernel/xiaomi/sdm845"
		name="kernel_xiaomi_sdm845"
		remote="PainKiller3"
		revision="thirteen"
		clone-depth="1"/>

    <!-- Clang --> 
	<project
		path="prebuilts/clang/host/linux-x86/clang-proton"
		name="proton-clang"
		remote="kdrag0n"
		revision="master"
		clone-depth="1"/>
 
    <!-- Replacement  -->
	<remove-project
		name="android_hardware_lineage_compat"/>

	<project
		path="hardware/xiaomi"
		name="xd_hardware_xiaomi"
		remote="xd"/>
		
	<remove-project
	    name="frameworks_base"/>
	    
	<project
        path="frameworks/base"
        name="fwb_derp"
        groups="pdk-cw-fs,pdk-fs"
        remote="DeclanG9"
        revision="staging"/>

	<remove-project
		name="packages_apps_Settings"/>

	<project
		path="packages/apps/Settings"
		name="Settings"
		remote="DeclanG9"
		revision="13"
		clone-depth="1"/>

</manifest>

